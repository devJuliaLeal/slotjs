<!-- Login.template.ejs -->
<style>
    #loginSection {
      position: fixed;
      top: 10px;
      left: 50%;
      transform: translateX(-50%);
      z-index: 1000;
    }
  
    #loginToggleBtn {
      background-color: #3498db;
      color: white;
      border: none;
      border-radius: 25px;
      padding: 30px 24px;
      font-size: 16px;
      font-weight: bold;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      cursor: pointer;
      transition: background-color 0.3s ease, transform 0.2s ease;
    }
  
    #loginToggleBtn:hover {
      background-color: #2980b9;
      transform: scale(1.05);
    }
  
    #loginOverlay {
      display: none;
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(0, 0, 0, 0.5);
      z-index: 999;
    }
  
    #loginFormContainer {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      background: white;
      padding: 2rem;
      border-radius: 8px;
      max-width: 300px;
      width: 90%;
    }
  
    #loginFormContainer input,
    #loginFormContainer button {
      display: block;
      width: 100%;
      padding: 10px;
      margin-bottom: 10px;
    }
  </style>
  
  
  <section id="loginSection" style="text-align: center; margin: 2rem 0;">
    <button id="loginToggleBtn" style="padding: 10px 20px; font-size: 16px; cursor: pointer;">
      Fazer Login
    </button>
  </section>
  
  <!-- Overlay com o formulário -->
  <div id="loginOverlay">
    <div id="loginFormContainer">
      <form id="loginForm">
        <input type="text" placeholder="Usuário" name="username" required />
        <input type="password" placeholder="Senha" name="password" required />
        <button type="submit">Entrar</button>
      </form>
    </div>
  </div>
  
  <script>
    document.addEventListener('DOMContentLoaded', function () {
      const toggleBtn = document.getElementById('loginToggleBtn');
      const overlay = document.getElementById('loginOverlay');
  
      toggleBtn.addEventListener('click', function () {
        overlay.style.display = 'block';
      });
  
      // Opcional: fechar o overlay ao clicar fora do formulário
      overlay.addEventListener('click', function (e) {
        if (e.target === overlay) {
          overlay.style.display = 'none';
        }
      });
    });
  </script>